{
    "compilerOptions": {
      "plugins": [{ "transform": "tsc-alias/transform" }],
      "target": "ES2022",
      "module": "ESNext",
      "lib": ["ES2022"],
      "moduleResolution": "node",
      "moduleDetection": "force",
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./",
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "composite": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node"],
    },
    "include": ["src", "src/data/*.json"],
    "exclude": ["node_modules", "dist"]
  }
  